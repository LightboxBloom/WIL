<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <!--    heading-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:padding="15dp"
            android:text="@string/diary_entry"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="32sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    displaying mood entries-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:padding="15dp">

            <!--    date-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="95dp"
                app:cardBackgroundColor="@color/cardView"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDatePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/abeezee"
                        android:hint="@string/dd_mm_yyyy"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    select mood card view-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/cardView"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/abeezee"
                        android:padding="5dp"
                        android:text="@string/select_mood"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgHappy"
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/img_happy" />

                                <TextView
                                    android:id="@+id/txtHappy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/abeezee"
                                    android:padding="5dp"
                                    android:text="@string/happy"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/img_happy" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/abeezee"
                                    android:padding="5dp"
                                    android:text="Happy"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/img_happy" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/abeezee"
                                    android:padding="5dp"
                                    android:text="Happy"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/img_happy" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/abeezee"
                                    android:padding="5dp"
                                    android:text="Happy"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/img_happy" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/abeezee"
                                    android:padding="5dp"
                                    android:text="Happy"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_row="0"
                                    android:layout_column="3"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/img_happy" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="5dp"
                                    android:fontFamily="@font/abeezee"
                                    android:padding="5dp"
                                    android:text="Happy"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    write about day-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/cardView"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/abeezee"
                        android:padding="5dp"
                        android:text="@string/tell_me_about_your_day"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/txtDiaryEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:ems="20"
                        android:hint="@string/discuss_up_to_500_characters"
                        android:textColorHint="@color/colorPrimary"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:lines="50"
                        android:maxLines="100"
                        android:maxLength="1000"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingBottom="10dp"
                        android:singleLine="false"
                        android:textSize="22sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>
    </ScrollView>

    <!--    fab-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="bottom">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFloat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:clickable="true"
            android:elevation="10dp"
            android:src="@drawable/ic_save"
            app:elevation="10dp" />

    </LinearLayout>

</RelativeLayout>
