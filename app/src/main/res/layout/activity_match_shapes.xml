<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--    heading-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/abeezee"
                    android:padding="15dp"
                    android:text="Match Shapes"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="32sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/level1Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_puzzle_rounded"
            android:elevation="10dp"
            android:fontFamily="@font/abeezee"
            android:text="Level 1"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/level2Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_puzzle_rounded"
            android:elevation="10dp"
            android:fontFamily="@font/abeezee"
            android:text="Level 2"
            android:textSize="25sp"
            android:visibility="invisible"></Button>

        <Button
            android:id="@+id/level3Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_puzzle_rounded"
            android:elevation="10dp"
            android:fontFamily="@font/abeezee"
            android:text="Level 3"
            android:textSize="25sp"
            android:visibility="invisible"></Button>

        <Button
            android:id="@+id/level4Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_puzzle_rounded"
            android:elevation="10dp"
            android:fontFamily="@font/abeezee"
            android:text="Level 4"
            android:textSize="25sp"
            android:visibility="invisible"></Button>

        <Button
            android:id="@+id/level5Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_puzzle_rounded"
            android:elevation="10dp"
            android:fontFamily="@font/abeezee"
            android:text="Level 5"
            android:textSize="25sp"
            android:visibility="invisible"></Button>

        <Button
            android:id="@+id/freeModeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_puzzle_rounded"
            android:elevation="10dp"
            android:fontFamily="@font/abeezee"
            android:text="Free Mode"
            android:textSize="25sp"
            android:visibility="invisible"></Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>